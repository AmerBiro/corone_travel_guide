<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoroneTravelGuide" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="splash_screen_title">
        <item name="fontFamily"> @font/crimson_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/title</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginBottom">80dp</item>
    </style>

    <style name="app_title">
        <item name="fontFamily"> @font/crimson_text</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/title</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="splash_screen_status">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textSize" > 16sp </item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/field</item>
        <item name="android:textAlignment">center</item>
        <item name="background">@drawable/field</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="title">
        <item name="fontFamily"> @font/crimson_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/title</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="questions_list_single_item_sub_title">
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="edittext">
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="asd">
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">text</item>
    </style>


</resources>